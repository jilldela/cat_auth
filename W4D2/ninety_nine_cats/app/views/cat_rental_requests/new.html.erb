<h1>Rent a Cat!</h1>

<form action="<%= cat_rental_requests_url%>" method="POST">
  <label for="cat">Cat:</label>
  <br>
  <select name="cat_rental_request[cat_id]" id="cat">
    <% @cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="start_date">Start Date:</label>
  <input type="date" id="start_date" name="cat_rental_request[start_date]">
  <br>

  <label for="end_date">End Date:</label>
  <input type="date" id="end_date" name="cat_rental_request[end_date]">
  <br>


  <br><br>
  <input type="submit" value="Submit Request">
</form>
